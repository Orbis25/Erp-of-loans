@page
@model LoginModel

@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-xs-12 col-md-6 col-xl-6 col-lg-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center">HISolutions</h1>
                    <p class="text-center">
                        <i>La solución a tu negocio!</i>
                    </p>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email">Correo</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    Manternerme logueado?
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block text-white" style="background:#673AB7">Entrar</button>
                        </div>
                        @*<div class="form-group">
                <p>
                    <i> <a id="forgot-password" asp-page="./ForgotPassword">Recuperar contraseña</a></i>
                </p>
            </div>*@
                    </form>
                </div>
            </div>
      
        </div>
    </div>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
