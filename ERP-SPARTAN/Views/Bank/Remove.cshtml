@model Models.Models.HiLoans.Bank

@{
    ViewData["Title"] = "Remove";
}



<div class="row">
    <div class="col-12 mb-3">
        <div class="card">
            <div class="card-body">
                <h1><i class="text-center fa fa-sad-cry"></i></h1>   
                ¿Seguro que quieres eliminar al banco @Model.Name?
            </div>
        </div>
    </div>
    <div class="col-12">
        <form asp-action="Remove">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-dark">Volver</a>
        </form>
    </div>
</div>



