@model IdentityRole
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center">
                    <i class="fas fa-fw fa-user-secret"></i>
                </h1>
                <h1 class="text-center">Crea un nuevo rol</h1>
                <form asp-action="Create" asp-controller="Rol">
                    <div class="form-group">
                        <label class="col-form-label" asp-for="Name">Nombre</label>
                        <input asp-for="Name" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-radius">Volver</a>
                        <button type="submit" class="btn btn-primary btn-radius">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

