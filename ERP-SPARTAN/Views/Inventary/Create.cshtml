@model Article


<div class="card">
    <div class="card-body">
        <h1>Agregar nuevo</h1>
    </div>
</div>

<hr />

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <form asp-action="Create" class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Precio</label>
                        <input asp-for="Price" class="form-control decimal" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PriceForShop">Precio de compra</label>
                        <input asp-for="PriceForShop" class="form-control decimal" />
                        <span asp-validation-for="PriceForShop" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" type="number" class="form-control decimal" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Agregar</button>
                        <a asp-action="Index" class="btn btn-dark">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
