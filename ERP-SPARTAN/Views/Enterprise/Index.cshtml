@model IEnumerable<Models.Models.Accounting.Enterprise>

@{
    ViewData["Title"] = "Index";
}



<div class="card">
    <div class="card-body">
        <div class="container-fluid">

            <div class="row justify-content-between">
                <div class="col-xs-11 ">

                    <h1><i class="fas fa-fw fa-building"></i> Empresas</h1>
                </div>
                <div class="col-xs-1">
                    <a asp-action="Create" asp-controller="Enterprise" class="btn ct-bg-primary text-white">Nuevo</a>
                </div>
                <div class="col-12">
                </div>
            </div>

        </div>
    </div>
</div>

<hr />


<div class="card">
    <div class="card-body">

        <div class=" mb-3 p-1" style="width:100%">
            <table class="table data-table display nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            Creación
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                                <i class="ml-5 col-smd d-inline d-sm-inline d-md-inline d-lg-none text-danger " style="font-weight:bold">(pulsame para ver mas información)</i>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAtStr)
                            </td>
                            <td>
                                <a asp-action="Update" class="btn btn-sm btn-warning text-white" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                <a asp-action="Remove" class="btn btn-sm btn-danger text-white" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>
</div>


<partial name="_NotificationPartial" />
