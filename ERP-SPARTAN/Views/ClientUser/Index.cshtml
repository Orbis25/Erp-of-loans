@model IEnumerable<ClientUser>

<div class="container-fluid">

    <div class="row justify-content-between">
        <div class="col-xs-11 ">

            <h1><i class="fas fa-fw fa-users"></i> Clientes</h1>
        </div>

        <div class="col-xs-1">
            <a asp-action="Create" class="btn btn-primary btn-radius">Nuevo</a>
        </div>
        <div class="col-12">
        </div>
    </div>

</div>
<hr />

<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered data-table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Numero</th>
                        <th>Correo</th>

                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {

                        <tr>
                            <td>@client.User.Name @client.User.LastName</td>
                            <td>@client.User.PhoneNumber</td>
                            <td>@client.User.Email</td>
                            <td>
                                <div>
                                    <a asp-action="GetById" asp-route-id="@client.Id" class="btn acent-background"><i class="far fa-eye text-white"></i></a>
                                    <button class="btn acent-background"><i class="far fa-trash-alt text-white"></i></button>
                                    <button class="btn acent-background"><i class="fas fa-ban text-white"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="_NotificationPartial" />