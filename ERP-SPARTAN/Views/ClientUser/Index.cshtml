@model Models.ViewModels.HiAccounting.ClientUsers.AllClientUsersVM

<div class="container-fluid">

    <div class="row justify-content-between">
        <div class="col-xs-11 ">

            <h1><i class="fas fa-fw fa-users"></i> Clientes</h1>
        </div>

        <div class="col-xs-1">
            <a asp-action="Create" class="btn btn-primary btn-radius">Nuevo</a>
        </div>
        <div class="col-12">
        </div>
    </div>

</div>
<hr />


@if (!Model.Enterprises.Any())
{
    <div class="alert alert-info" role="alert">
        <i class="fa fa-info-circle"></i> <i>Al parecer no tiene empresas, dirijase a crear alguna</i>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-12 mb-3">
                <label class="col-form-label">Empresas</label>
                <form class="form-group form-inline" asp-action="Index" method="get">
                    <partial name="_GetAllSelecteableEnterprisePartial" model="Model.Enterprises" />
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered data-table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Numero</th>
                        <th>Correo</th>
                        <th>Empresa</th>
                        <th>Estado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td>@client.User.Name @client.User.LastName</td>
                            <td>@client.User.PhoneNumber</td>
                            <td>@client.User.Email</td>
                            <td>@client.Enterprise.Name</td>
                            <td>
                                @{
                                    var state = client.User.State == State.Active ? "Activo" : "Bloqueado";
                                    var icon = client.User.State == State.Active ? "fas fa-ban" : "fas fa-lock-open";
                                }
                                @state
                            </td>
                            <td>
                                <div>
                                    <a asp-action="GetById" asp-route-id="@client.Id" class="btn acent-background"><i class="far fa-eye text-white"></i></a>
                                    <button class="btn acent-background" onclick="ShowSweetConfirmRemoveDialog('@client.Id','ClientUser','Remove')"><i class="far fa-trash-alt text-white"></i></button>
                                    <button class="btn acent-background" onclick="ShowSweetConfirmEnableOrDisableUser('@client.UserId','ClientUser','LockOrUnlockUser')"><i class="@icon text-white"></i></button>
                                    @if (User.IsInRole(nameof(RolsAuthorization.ClientsUser)))
                                    {
                                        <a asp-action="GetByClientUser" asp-controller="Movement" asp-route-id="@client.Id" class="btn acent-background text-white"><i class="fas fa-money-bill-alt"></i></a>
                                    }
                                    @if (User.IsInRole(nameof(RolsAuthorization.Admin)))
                                    {
                                        <a asp-action="AddToRole" asp-controller="User" asp-route-id="@client.User.Id" class="btn acent-background text-white"><i class="fas fa-user-secret"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="_NotificationPartial" />
<script src="~/js/Shared/httpRequest.js" asp-append-version="true"></script>