@model Models.Models.ClientUser
@inject IOptions<Models.Settings.DefaultValue> options

<div class="row">
    <div class="col">
        <div class="row justify-content-center">
            <div class="col-sm-12 text-center">
                <img style="" src="@options.Value.Avatar@Model.User.UserName" alt="@Model.User.UserName .png" class="img-thumbnail text-center">
                <p class="font-weight-light">@Model.User.FullName <br />@Model.EnterpriseName <br />Creado el : @Model.CreateAt.ToShortDateString()</p>
            </div>
            <div class="col-xs-12 col-sm-6">
                <form class="form-group" asp-controller="ClientUser" asp-action="Update" method="post">
                    <div asp-validation-summary="All"></div>
                    <input asp-for="User.UserName" type="hidden" />
                    <input asp-for="CreatedBy" type="hidden" />
                    <input asp-for="User.Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="User.Name">Nombre</label>
                        <input asp-for="User.Name" class="form-control" />
                        <span asp-validation-for="User.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.LastName">Apellidos</label>
                        <input asp-for="User.LastName" class="form-control" />
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.PhoneNumber">Numero</label>
                        <input asp-for="User.PhoneNumber" id="phoneNumber" class="form-control" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Email">Correo</label>
                        <input asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                    @if (User.IsInRole(nameof(RolsAuthorization.ClientsUser)))
                    {
                        <div class="form-group">
                            <label asp-for="EnterpriseName">Empresa</label>
                            <input asp-for="EnterpriseName" class="form-control" />
                        </div>
                    }
                    <div class="form-group">
                        <button class="btn btn-primary">Editar</button>
                        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
